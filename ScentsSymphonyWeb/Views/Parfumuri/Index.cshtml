@model IEnumerable<Parfumuri>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2>Perfume List</h2>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-striped" style="width: 100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Perfume notes</th>
                        <th>Stock</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.Description</td>
                            <td>@obj.Price</td>
                            <td>@obj.PerfumeNotes</td>
                            <td>@obj.Stock</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Parfumuri" asp-action="Edit" asp-route-ProductID="@obj.ProductID" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Parfumuri" asp-action="Delete" asp-route-ProductID="@obj.ProductID" class="btn btn-danger btn-sm ml-2" onclick="return confirm('Are you sure you want to delete this item?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-left">
            <a asp-controller="Parfumuri" asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new perfume
            </a>
        </div>
    </div>
</div>
