@model ScentsSymphonyWeb.Models.Review

<h2>Delete Review</h2>
<div class="review-detail">
    <p>Review ID: @Model.ReviewID</p>
    <p>Product: @Model.Product.Name</p>
    <p>User: @Model.User.UserName</p>
    <p>Rating: @Model.Rating</p>
    <p>Comment: @Model.Comment</p>
    <p>Review Date: @Model.ReviewDate</p>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ReviewID" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>