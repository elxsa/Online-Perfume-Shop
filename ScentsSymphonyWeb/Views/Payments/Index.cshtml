@model IEnumerable<ScentsSymphonyWeb.Models.Payment>

<h2>Payments</h2>
<table class="table">
    <thead>
        <tr>
            <th>Payment ID</th>
            <th>Order ID</th>
            <th>Amount</th>
            <th>Payment Date</th>
            <th>Payment Method</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.PaymentID</td>
                <td>@payment.OrderID</td>
                <td>@payment.Amount</td>
                <td>@payment.PaymentDate</td>
                <td>@payment.PaymentMethod</td>
                <td>@payment.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@payment.PaymentID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@payment.PaymentID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>