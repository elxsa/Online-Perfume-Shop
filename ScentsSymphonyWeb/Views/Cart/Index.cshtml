@model List<ScentsSymphonyWeb.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
}

<h2 class="mt-3 mb-3">Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price (RON)</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price</td>
                <td>@(item.Product.Price * item.Quantity)</td>
                <td>
                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post" style="display:inline;">
                        <input type="hidden" name="productId" value="@item.Product.ProductID" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3 mb-3">
    <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary">Checkout</a>
</div>
